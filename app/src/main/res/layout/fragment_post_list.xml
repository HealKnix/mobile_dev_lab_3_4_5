<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.PostListFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/posts_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".Activities.HomeActivity">

        <View
            android:id="@+id/some_id"
            android:layout_width="wrap_content"
            android:layout_height="58dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/header"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sf_pro_rounded_heavy"
            android:letterSpacing="0.1"
            android:text="Посты"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="24dp"
            app:layout_constraintBottom_toBottomOf="@+id/some_id"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/some_id"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/some_id">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:clipToPadding="false"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="5dp"
                        android:clipToPadding="false"

                        android:outlineAmbientShadowColor="#aa423759"
                        android:outlineSpotShadowColor="#aa423759"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="10dp"
                        app:contentPadding="15dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:fontFamily="@font/sf_pro_rounded_medium"
                                android:text="Какой-то пост №1"
                                android:textColor="@color/text_primary_1"
                                android:textSize="15sp" />

                            <View
                                android:id="@+id/divider"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="@color/divider_color" />

                            <TextView
                                android:id="@+id/textView4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/sf_pro_rounded_regular"
                                android:text="Текст к какому-то посту №1 \n dadwdaw dawdw \n dawaddwaadw \n yyhfhfiiwidjwjdajdjwakdwkja"
                                android:textColor="@color/text_primary_2"
                                android:textSize="13sp" />

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:onClick="likePost">

                                <Button
                                    android:id="@+id/btn_like_post_0"
                                    android:layout_width="80dp"
                                    android:layout_height="wrap_content"
                                    android:backgroundTint="@color/btn_like_color"
                                    android:padding="10dp"
                                    app:iconTint="@color/btn_like_color"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="21dp"
                                    android:orientation="horizontal"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="@+id/btn_like_post_0"
                                    app:layout_constraintTop_toTopOf="@+id/btn_like_post_0">

                                    <ImageView
                                        android:id="@+id/like_post_0"
                                        android:layout_width="24dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:scaleType="centerInside"
                                        android:tag="like_icon"
                                        app:srcCompat="@drawable/icon_heart_like_outlined" />

                                    <TextView
                                        android:id="@+id/textView7"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"
                                        android:paddingLeft="10dp"
                                        android:tag="like_counter"
                                        android:text="0"
                                        android:textSize="14sp" />
                                </LinearLayout>

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>
            </ScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>